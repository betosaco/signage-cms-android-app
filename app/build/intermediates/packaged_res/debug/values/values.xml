<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accentColor">#FFC107</color>
    <color name="black">#000000</color>
    <color name="primaryColor">#009688</color>
    <color name="primaryDarkColor">#00796B</color>
    <color name="secondaryColor">#FF9800</color>
    <color name="white">#FFFFFF</color>
    <string name="app_name">MATMAX Signage</string>
    <style name="Theme.MatmaxPOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>
    <declare-styleable name="StepIndicatorView">
        <attr format="integer" name="stepCount"/>
        <attr format="integer" name="currentStep"/>
    </declare-styleable>
</resources>